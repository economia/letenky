&
    font-size 12pt
    margin 0px
    line-height 1.3em
    font-family arial, sans-serif
    position relative
    margin-left 0px
    *,
    *:before,
    *:after
        box-sizing border-box
    a
        color HNLink
        text-decoration underline
        &:active
        &:focus
            text-decoration none

    .fallback
        position absolute
        top 0px
        left 0px
        width 100%
        height 600px
        background white
        z-index 10

        div
            margin 270px 40px 0px 40px
            text-align center
            padding 20px 10px
            border 1px dotted #aaa
